<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <variable
            name="lightSensor"
            type="com.butajlo.blesensors.ui.lighttab.LightData"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/LightScreenTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_ic_light"
            style="@style/LightScreenTextStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_lux"
            style="@style/LightScreenTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_ic_light" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>